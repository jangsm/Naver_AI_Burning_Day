<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    tools:context=".src.menu_list.MenuListActivitiy">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:background="@drawable/bg_round"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="63dp"
            android:layout_marginTop="53dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lineSpacingExtra="13.5sp"
                android:text="인기"
                android:textColor="#ff3400"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lineSpacingExtra="11.5sp"
                android:text="밥"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lineSpacingExtra="11.5sp"
                android:text="면"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lineSpacingExtra="11.5sp"
                android:text="사이드"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lineSpacingExtra="11.5sp"
                android:text="기타"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_gimbap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="customOnClick"
                android:src="@drawable/iv_gimbap" />

            <ImageView
                android:id="@+id/iv_gimchi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="customOnClick"
                android:src="@drawable/iv_gimch" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_udong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="customOnClick"
                android:src="@drawable/iv_udong" />

            <ImageView
                android:id="@+id/iv_bibimbap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="customOnClick"
                android:src="@drawable/iv_bibimbap" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear_menu_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="30dp"
                android:visibility="invisible"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_menu1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lineSpacingExtra="13sp"
                    android:text="돌솥비빔밥정식(1)"
                    android:textColor="#000000"
                    android:textSize="32.5sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="13sp"
                    android:text="1,000원"
                    android:textColor="#000000"
                    android:textSize="32.5sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_menu_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:visibility="invisible"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_menu2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lineSpacingExtra="13sp"
                    android:text="돌솥비빔밥정식(1)"
                    android:textColor="#000000"
                    android:textSize="32.5sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="13sp"
                    android:text="1,000원"
                    android:textColor="#000000"
                    android:textSize="32.5sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_menu_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:visibility="invisible"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lineSpacingExtra="13sp"
                    android:text="돌솥비빔밥정식(1)"
                    android:textColor="#000000"
                    android:textSize="32.5sp" />

                <TextView
                    android:id="@+id/tv_menu3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="13sp"
                    android:text="1,000원"
                    android:textColor="#000000"
                    android:textSize="32.5sp" />

            </LinearLayout>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/iv_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:lineSpacingExtra="13.5sp"
                    android:text="총 금액 : "
                    android:textColor="#000000"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:lineSpacingExtra="13.5sp"
                    android:text="20,000원"
                    android:textColor="#ff3400"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/btn_cancel" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/btn_pay" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/activity_main_iv_recording"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="-5dp"
        android:layout_marginBottom="100dp"
        android:onClick="customOnClick"
        android:src="@drawable/ic_speak" />
</FrameLayout>