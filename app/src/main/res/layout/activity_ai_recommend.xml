<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    tools:context=".src.recommend.RecommendActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/bg_round"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:src="@drawable/ai_text_img"/>

        <TextView
            android:id="@+id/recommend_ai_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:lineSpacingExtra="17sp"
            android:text="아이들이 좋아하는 메뉴"
            android:textColor="#000000"
            android:textSize="32.5sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recommend_ai_rv"
            android:background="@drawable/bg_round"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">
        </androidx.recyclerview.widget.RecyclerView>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@drawable/background_border_img">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/recommend_ai_name1_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:lineSpacingExtra="13sp"
                    android:textColor="#000000"
                    android:textSize="32.5sp"
                    tools:text="돌솥비빔밥정식" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/recommend_ai_won1_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:lineSpacingExtra="17.3sp"
                    android:textColor="#000000"
                    android:textSize="43.3sp"
                    tools:text="10,500원" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/recommend_ai_name2_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="32.5sp"
                    android:textColor="#000000"
                    android:lineSpacingExtra="13sp"
                    android:layout_gravity="center_vertical"
                    tools:text="돌솥비빔밥정식"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/recommend_ai_won2_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="43.3sp"
                    android:textColor="#000000"
                    android:layout_gravity="center_vertical"
                    android:lineSpacingExtra="17.3sp"
                    tools:text="10,500원"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/recommend_ai_name3_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="32.5sp"
                    android:textColor="#000000"
                    android:lineSpacingExtra="13sp"
                    android:layout_gravity="center_vertical"
                    tools:text="돌솥비빔밥정식"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/recommend_ai_won3_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="43.3sp"
                    android:textColor="#000000"
                    android:layout_gravity="center_vertical"
                    android:lineSpacingExtra="17.3sp"
                    tools:text="10,500원"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/recommend_ai_name4_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="32.5sp"
                    android:textColor="#000000"
                    android:lineSpacingExtra="13sp"
                    android:layout_gravity="center_vertical"
                    tools:text="돌솥비빔밥정식"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/recommend_ai_won4_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="43.3sp"
                    android:textColor="#000000"
                    android:layout_gravity="center_vertical"
                    android:lineSpacingExtra="17.3sp"
                    tools:text="10,500원"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="#29000000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="46.7sp"
                    android:textColor="#000000"
                    android:lineSpacingExtra="18sp"
                    tools:text="총 금액 : "
                    />
                <TextView
                    android:id="@+id/recommend_ai_won_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="46.7sp"
                    android:textColor="#ff3400"
                    android:lineSpacingExtra="18sp"
                    tools:text="20000원"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/recommend_ai_cancel_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:onClick="customOnClick"
                    android:src="@drawable/cancel_btn"/>
                <ImageView
                    android:id="@+id/recommend_ai_pay_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="customOnClick"
                    android:src="@drawable/pay_btn"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/activity_main_iv_recording"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="-5dp"
        android:layout_marginBottom="100dp"
        android:onClick="customOnClick"
        android:src="@drawable/ic_speak" />

</FrameLayout>