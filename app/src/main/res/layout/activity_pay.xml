<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    tools:context=".src.shopping.ShoppingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:background="@drawable/bg_round"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="47.5dp"
            android:layout_marginTop="72dp"
            android:layout_marginBottom="41dp"
            android:src="@drawable/ic_pay_img" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="800dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_gray"
            android:orientation="vertical"
            android:padding="33dp">

            <LinearLayout
                android:id="@+id/linear_menu_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pay_name1_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lineSpacingExtra="13sp"
                    android:text="돌솥비빔밥정식(1)"
                    android:textColor="#000000"
                    android:textSize="32.5sp" />

                <TextView
                    android:id="@+id/pay_won1_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="13sp"
                    android:text="1,000원"
                    android:textColor="#000000"
                    android:textSize="32.5sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_menu_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/pay_name2_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lineSpacingExtra="13sp"
                    android:text="돌솥비빔밥정식(1)"
                    android:textColor="#000000"
                    android:textSize="32.5sp" />

                <TextView
                    android:id="@+id/pay_won2_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="13sp"
                    android:text="1,000원"
                    android:textColor="#000000"
                    android:textSize="32.5sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_menu_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/pay_name3_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lineSpacingExtra="13sp"
                    android:text="돌솥비빔밥정식(1)"
                    android:textColor="#000000"
                    android:textSize="32.5sp" />

                <TextView
                    android:id="@+id/pay_won3_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="13sp"
                    android:text="1,000원"
                    android:textColor="#000000"
                    android:textSize="32.5sp" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                android:background="#29000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="23.3sp"
                    android:textColor="#1c1c1c"
                    android:textSize="60sp"
                    tools:text="총 금액" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/total_won_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="23.3sp"
                    android:textColor="#ff3400"
                    android:textSize="60sp"
                    tools:text="9,500 원" />
            </LinearLayout>
        </LinearLayout>


        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/pay_select_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:onClick="customOnClick"
                android:src="@drawable/money_img" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/card_select_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:onClick="customOnClick"
                android:src="@drawable/card_img" />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <ImageView
        android:id="@+id/activity_main_iv_recording"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="-5dp"
        android:layout_marginBottom="100dp"
        android:onClick="customOnClick"
        android:src="@drawable/ic_speak" />


</FrameLayout>